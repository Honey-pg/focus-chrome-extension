{
    "manifest_version": 3,
    "name": "My Vite Extension",
    "description": "A Chrome extension built with Vite and TypeScript",
    "version": "1.0.0",
    "permissions": ["storage", "scripting", "tabs"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }