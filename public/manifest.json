{
    "manifest_version": 3,
    "name": "YouTube Focus",
    "description": "Hide distractions on YouTube",
    "version": "1.0.0",
    "permissions": ["storage"],
    "host_permissions": [
      "https://www.youtube.com/*",
      "https://m.youtube.com/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*", "https://m.youtube.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }